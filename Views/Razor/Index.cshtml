
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @{ int count = 10;}
        @{
            <h1> the value of count is @count</h1>
        }
        @{
            int x = 10;
            if (x % 2 == 0)
            {
                <h1>@x is divisble by 2</h1>
            }
        }
        <h1>Printing value of string by for loop</h1>
        @{
            int[] a = new int[4] { 1, 2, 3, 4 };
        }
        <ol>
            @for (int i = 0; i < a.Length; i++)
            {
                <li>@a[i]</li>
            }
        </ol>
        @{ 
            <h3> printing values of a string</h3>
            <ul>
                @foreach(int item in a)
            {
                <li>@item</li>
            }
            </ul>
        }
        <h3> printing values of strinng new style</h3>
        @{ 
                <ul>
                    @foreach (int item in a)
                    {
                        <li>@item</li>
                    }
                </ul>
        }

    </div>
</body>
</html>
